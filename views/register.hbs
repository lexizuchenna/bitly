{{> _header}}
<div class="form">
    <h2>Register</h2>
    <div class="form-sec">
        {{> _forms}}
    </div>
    <form action="/users/register" method="POST">
        <div class="form-input">
            <input type="text" class="control" name="firstName" placeholder="Enter First Name">   
        </div> 
        <div class="form-input">
            <input type="text" class="control" name="lastName" placeholder="Enter Last Name">   
        </div> 
        <div class="form-input">
            <input type="email" class="control" name="email" placeholder="Enter Email">   
        </div>
        <div class="form-input">
            <input type="password" class="control" name="password" placeholder="Enter Password">   
        </div>
        <div class="form-input">
            <input type="password" class="control" name="password2" placeholder="Re-type Password">   
        </div>
        <div class="form-input">
            <input type="submit" value="Register" class="btn btn-secondary btn-block button">   
        </div>
    </form>
    <div class="form-sec">
        <p>Or Login with</p>
        <div class="form-input">
            <a href="/auth/google" class="btn btn-block">
                <i class="fab fa-google left"></i> Log in with google
            </a>   
        </div>
    </div>
</div>



