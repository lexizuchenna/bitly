<header id="head">
  <div class="container flex">
    <div class="logo">
      <a href="/"><img src="/img/logo.png" alt="" /></a>
    </div>
    <nav class="flex">
      <ul>
        <li><a href="/">HOME</a></li>
        <li><a href="/about">ABOUT</a></li>
        <li><a href="/contact">CONTACT</a></li>
      </ul>
      <ul class="sec-nav ml-5">
        <li><a href="#"><i class="fas fa-user"></i> | {{name}} </a></li>
        <li><a href="/users/logout">Logout</a></li>
      </ul>
    </nav>
  </div>
</header>

<div class="container flex">
  <section class="side-bar">
    <div class="brand">
      <h2>bitly</h2>
    </div>
    <nav>
      <ul>
        <li>
          <a href="/users/dashboard" class="flex">
            <img src="/img/tachometer-alt.svg" alt="tachometer dashboard" />
            Dashboard
          </a>
        </li>
        <li>
          <a href="/users/fund" class="flex">
            <img src="/img/chart-bar.svg" alt="tachometer dashboard" />
            Fund Wallet
          </a>
        </li>
        <li>
          <a href="/users/withdraw" class="flex active">
            <img src="/img/dna.svg" alt="tachometer dashboard" />
            Withraw fund
          </a>
        </li>
        <li>
          <a href="/users/profile" class="flex">
            <img src="/img/user.svg" alt="tachometer dashboard" />
            Profile
          </a>
        </li>
        <li>
          <a href="/users/settings" class="flex">
            <img src="/img/folder.svg" alt="tachometer dashboard" />
            Settings
          </a>
        </li>
      </ul>
    </nav>
  </section>

  <!-- DASHBOARD -->
  <section class="main">
    <div class="head">WITHDRAWAL</div>
    <div class="head second">
      <h3>Available Withdrawal
        {{#if fund}}
          {{#each fund}}
            <span> ${{bal}} </span>
          {{/each}}
        {{else}}
          <span> $0.00 </span>
        {{/if}}
      </h3>
    </div>
    <div class="stat">
      <p>
        ENCRYPTION TECHNIQUE
        <br />
        <br />
        Bitly Investment adopt the SSL (Secure Sockets Layer) network security
        protocol to guarantee a secure connection in all communications with our
        clients, protect customers during their transactions with the company
        and keep all customer information private.
      </p>
      <form action="/users/withdraw" method="POST">
        <div class="group">
          <input type="number" placeholder="Amount USD" name="amount"/>
        </div>
        <div class="group">
          {{#if data}}
              {{#each data}}
                <input type="text" placeholder="Wallet ID" value="{{address}}" name="address" />
              {{/each}}
              {{else}}
                <input type="text" placeholder="Wallet ID" value="Address Unset" disabled />
            {{/if}}
          
        </div>
        <input type="submit" value="PROCEED" />
      </form>
    </div>
  </section>
</div>