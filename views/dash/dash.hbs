<header id="head">
  <div class="container flex">
    <div class="logo">
      <a href="/"><img src="/img/logo.png" alt="" /></a>
    </div>
    <nav class="flex">
      <ul>
        <li><a href="/">HOME</a></li>
        <li><a href="/about">ABOUT</a></li>
        <li><a href="/contact">CONTACT</a></li>
      </ul>
      <ul class="sec-nav ml-5">
        <li><a href="#"><i class="fas fa-user"></i> | {{name}} </a></li>
        <li><a href="/users/logout">Logout</a></li>
      </ul>
    </nav>
  </div>
</header>

<div class="container flex">
  <section class="side-bar">
    <div class="brand">
      <h2>bitly</h2>
    </div>
    <nav>
      <ul>
        <li>
          <a href="/users/dashboard" class="flex active">
            <img src="/img/tachometer-alt.svg" alt="tachometer dashboard" />
            Dashboard
          </a>
        </li>
        <li>
          <a href="/users/fund" class="flex">
            <img src="/img/chart-bar.svg" alt="tachometer dashboard" />
            Fund Wallet
          </a>
        </li>
        <li>
          <a href="/users/withdraw" class="flex">
            <img src="/img/dna.svg" alt="tachometer dashboard" />
            Withraw fund
          </a>
        </li>
        <li>
          <a href="/users/profile" class="flex">
            <img src="/img/user.svg" alt="tachometer dashboard" />
            Profile
          </a>
        </li>
        <li>
          <a href="/users/settings" class="flex">
            <img src="/img/folder.svg" alt="tachometer dashboard" />
            Settings
          </a>
        </li>
      </ul>
    </nav>
  </section>

  <!-- DASHBOARD -->
  <section class="main">
    <div class="head">DASHBOARD</div>
    <div class="statics">
      <div class="grid">
        <div class="cards" style="background-color: green; color: white;">
          <div class="main-digit flex">
            <span class="txt">Account Balance:</span>
            <span class="dig">
              {{#if fund}}
                {{#each fund}}
                  ${{bal}}
                {{/each}}
              {{else}}
                $0.00
              {{/if}}
            </span>
          </div>
          <div class="defer-digit flex">
            <span class="txt">Active Investment:</span>
            <span class="dig">
              {{#if fund}}
                {{#each fund}}
                  ${{amount}}
                {{/each}}
              {{else}}
                $0.00
              {{/if}}
            </span>
          </div>
          <div class="dark-area" style="background-color: darkgreen;">
            <div class="image">
              <img src="/img/chart-bar2.svg" alt="" />
            </div>
          </div>
        </div>
        <div class="cards" style="background-color: red; color: white;">
          <div class="main-digit flex">
            <span class="txt">Total Investment:</span>
            <span class="dig">
              {{#if fund}}
                {{#each fund}}
                  ${{tinvest}}
                {{/each}}
              {{else}}
                $0.00
              {{/if}}
            </span>
          </div>
          <div class="dark-area" style="background-color: darkred;">
            <div class="image">
              <img src="/img/dna2.svg" alt="" />
            </div>
          </div>
        </div>
        <div class="cards md" style="background-color: salmon; color: white;">
          <div class="main-digit flex">
            <span class="txt">Last Depsoit:</span>
            <span class="dig">
              {{#if fund}}
                {{#each fund}}
                  ${{bal}}
                {{/each}}
              {{else}}
                $0
              {{/if}}
            </span>
          </div>
          <div class="dark-area" style="background-color: darksalmon;">
            <div class="image">
              <img src="/img/dna2.svg" alt="" />
            </div>
          </div>
        </div>
        <div class="cards lg" style="background-color: cyan; color: white;">
          <div class="main-digit flex">
            <span class="txt">Total Withrawal:</span>
            <span class="dig">
              {{#if fund}}
                {{#each fund}}
                  ${{twith}}
                {{/each}}
              {{else}}
                $0.00
              {{/if}}
            </span>
          </div>
          <div class="defer-digit flex">
            <span class="txt">Last Withrawal:</span>
            <span class="dig">
              {{#if fund}}
                {{#each fund}}
                  ${{lwith}}
                {{/each}}
              {{else}}
                $0.00
              {{/if}}
            </span>
          </div>
          <div class="dark-area flex" style="background-color: darkcyan;">
            <div class="image">
              <img src="/img/chart-bar2.svg" alt="" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="history">
      <div class="head-history">Account history</div>
      <div class="body-history" id="history">
        <table>
          <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
          </tr>
          <tr>
            <td> {{ formatDate date "MMMM Do YYYY, h: mm"}} </td>
            <td> {{desc}} </td>
            <td>0</td>
          </tr>
          <tr>
            {{#if data}}
              {{#each data}}
                <td> {{ formatDate createdAt "MMMM Do YYYY, h: mm"}} </td>
                <td> {{desc}} </td>
                <td> 0 </td>
              {{/each}}
            {{else}}
            {{/if}}
          </tr>
          <tr>
            {{#if fund}}
              {{#each fund}}
                <td> {{ formatDate createdAt "MMMM Do YYYY, h: mm"}} </td>
                <td> {{desc}} </td>
                <td> {{amount}} </td>
              {{/each}}
            {{else}}
            {{/if}}
          </tr>
          <tr>
            {{#if cash}}
              {{#each cash}}
                <td> {{ formatDate createdAt "MMMM Do YYYY, h: mm"}} </td>
                <td> {{desc}} </td>
                <td> {{amount}} </td>
              {{/each}}
            {{else}}
            {{/if}}
          </tr>
        </table>
      </div>
    </div>
  </section>
</div>

<script src="/js/dashboard.js"></script>